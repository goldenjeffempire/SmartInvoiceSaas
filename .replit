modules = ["python-3.12", "web", "c-clang14", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["awsebcli", "cairo", "fontconfig", "freetype", "gdk-pixbuf", "ghostscript", "glib", "harfbuzz", "lcms2", "libffi", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "libyaml", "openjpeg", "pango", "pgadmin4", "pkg-config", "shared-mime-info", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Django Development Server"

[[workflows.workflow]]
name = "Django Development Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py runserver 0.0.0.0:5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 40221
externalPort = 3001

[[ports]]
localPort = 41507
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "smart_invoice.wsgi:application", "--bind", "0.0.0.0:5000", "--workers", "4", "--timeout", "120"]
build = ["sh", "build.sh"]
