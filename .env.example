# ===========================================
# Smart Invoice - Environment Configuration
# ===========================================

# Django Core Settings
# --------------------
# CRITICAL: DEBUG must be False in production! Only use True for local development.
DEBUG=False

# CRITICAL: Generate a secure SECRET_KEY for production (50+ random characters)
# You can generate one using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-dev-key-CHANGE-IN-PRODUCTION-use-random-50-chars

# Allowed Hosts (comma-separated list of domains)
# Development: localhost,127.0.0.1,.replit.dev
# Production: your-domain.com,.onrender.com
ALLOWED_HOSTS=localhost,127.0.0.1,.replit.dev,.onrender.com

# CSRF Protection (comma-separated list of trusted origins with https://)
CSRF_TRUSTED_ORIGINS=https://*.replit.dev,https://*.repl.co,https://*.onrender.com,https://*.render.com

# Database Configuration
# ----------------------
# For development, leave commented to use SQLite (db.sqlite3)
# For production, use PostgreSQL connection string from Render
# Example: DATABASE_URL=postgresql://user:password@host:5432/database
# DATABASE_URL=

# Email Configuration (SMTP)
# --------------------------
# Required for sending invoices via email and password reset
# Gmail example (requires App Password with 2FA enabled):
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
# Your Gmail address
EMAIL_HOST_USER=your-email@gmail.com
# Gmail App Password (16 characters, no spaces) - NOT your regular password!
# Get it from: https://myaccount.google.com/apppasswords
EMAIL_HOST_PASSWORD=your-gmail-app-password-here
# From email address shown to recipients
DEFAULT_FROM_EMAIL=Smart Invoice <noreply@smartinvoice.com>

# Production Security Settings
# ----------------------------
# These are automatically enabled when DEBUG=False
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000  # 1 year
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# WeasyPrint System Dependencies (Render build.sh handles these)
# ---------------------------------------------------------------
# libpango-1.0-0
# libpangocairo-1.0-0
# libgdk-pixbuf2.0-0
# libffi-dev
# shared-mime-info
# libcairo2
# libpangoft2-1.0-0

# Deployment Checklist
# --------------------
# [ ] Set DEBUG=False
# [ ] Generate and set secure SECRET_KEY
# [ ] Configure DATABASE_URL with PostgreSQL
# [ ] Update ALLOWED_HOSTS with your domain
# [ ] Update CSRF_TRUSTED_ORIGINS with your domain
# [ ] Set up email SMTP credentials
# [ ] Run: python manage.py collectstatic
# [ ] Run: python manage.py migrate
# [ ] Create superuser: python manage.py createsuperuser
